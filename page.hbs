{{!< default}}

{{#post}}
<article class="gh-article {{post_class}}">

    {{#if feature_image}}
        <div class="cover-title-container">
            <div class="cover-title" >
                <header class="gh-header gh-canvas gh-title">
                        <h1>{{title}}</h1>
                </header>
                <div class="black-cover"></div>
                <img class="gh-feature-image" src="{{feature_image}}" alt="{{title}}" />
            </div>
        </div>
    {{else}}
        <header class="gh-header gh-canvas gh-title">
            <h1>{{title}}</h1>
        </header>
    {{/if}}

    {{#if custom_excerpt}}
    <div class="abstract">
        <h2>Abstract</h2>
        <p>
        {{custom_excerpt}}
        </p>
    </div>
    {{/if}}

    <div class="gh-content gh-canvas">
        {{content}}
    </div>

</article>
{{/post}}
