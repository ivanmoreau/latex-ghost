{
    "name": "latex-ghost",
    "description": "A LaTeX theme for ghost",
    "demo": "https://ivmoreau.com",
    "version": "1.0.1",
    "engines": {
        "ghost": ">=4.0.0",
        "ghost-api": "v4"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "Iv√°n Molina Rebolledo",
        "email": "ivanmolinarebolledo@gmail.com",
        "url": "https://ivmoreau.com"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ivanmoreau/latex-ghost.git"
    },
    "bugs": "https://github.com/ivanmoreau/latex-ghost/issues",
    "contributors": "https://github.com/ivanmoreau/latex-ghost/graphs/contributors",
    "devDependencies": {
        "autoprefixer": "10.2.5",
        "cssnano": "4.1.10",
        "gscan": "4.0.1",
        "gulp": "4.0.2",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.0",
        "gulp-sourcemaps": "3.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-util": "3.0.8",
        "gulp-watch": "5.0.1",
        "gulp-zip": "5.1.0",
        "postcss-color-mod-function": "3.0.3",
        "postcss-easy-import": "3.0.0"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 15,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "dependencies": {
        "latex.css": "^1.5.0",
        "postcss": "^8.2.8",
        "katex": "^0.15.1"
    }
}
